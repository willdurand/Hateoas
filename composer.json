{
    "name": "willdurand/hateoas",
    "description": "A PHP library to support implementing representations for HATEOAS REST web services",
    "license": "MIT",
    "authors": [
        {
            "name": "William Durand",
            "email": "william.durand1@gmail.com"
        },
        {
            "name": "Adrien Brault",
            "email": "adrien.brault@gmail.com"
        }
    ],
    "require": {
        "doctrine/common": "~2.0",
        "doctrine/annotations": "1.*",
        "jms/metadata": "~1.1",
        "jms/serializer": "~0.13@dev",
        "symfony/expression-language": "~2.4@dev"
    },
    "require-dev": {
        "atoum/atoum": "dev-master",
        "symfony/yaml": "~2.0",
        "symfony/routing": "~2.0",
        "symfony/dependency-injection": "~2.0",
        "pagerfanta/pagerfanta": "~1.0"
    },
    "suggest": {
        "symfony/yaml": "To use yaml based configuration.",
        "symfony/routing": "To use the SymfonyRouteFactory."
    },
    "autoload": {
        "psr-0": { "Hateoas": "src/" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
