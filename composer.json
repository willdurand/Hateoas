{
    "name": "willdurand/hateoas",
    "description": "A PHP library to support implementing representations for HATEOAS REST web services",
    "license": "MIT",
    "authors": [
        {
            "name": "William Durand",
            "email": "william.durand1@gmail.com"
        },
        {
            "name": "Adrien Brault",
            "email": "adrien.brault@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "doctrine/common": "~2.0",
        "doctrine/annotations": "~1.0",
        "jms/metadata": "^2.0@dev",
        "jms/serializer": "^2.0@dev",
        "symfony/expression-language": "~3.0 || ~4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5",
        "symfony/yaml": "~3.0 || ~4.0",
        "symfony/routing": "~3.0 || ~4.0",
        "symfony/dependency-injection": "~3.0 || ~4.0",
        "pagerfanta/pagerfanta": "~1.0",
        "twig/twig": "^1.12 || ^2.0"
    },
    "suggest": {
        "symfony/yaml": "To use yaml based configuration.",
        "symfony/routing": "To use the SymfonyRouteFactory.",
        "twig/twig": "To use the Twig extensions."
    },
    "autoload": {
        "psr-0": { "Hateoas": "src/" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    }
}
