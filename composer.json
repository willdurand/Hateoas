{
    "name": "willdurand/hateoas",
    "description": "A PHP library to support implementing representations for HATEOAS REST web services",
    "license": "MIT",
    "authors": [
        {
            "name": "William Durand",
            "email": "william.durand1@gmail.com"
        },
        {
            "name": "Adrien Brault",
            "email": "adrien.brault@gmail.com"
        },
        {
            "name": "Asmir Mustafic",
            "email": "goetas@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 | ^8.0",
        "doctrine/annotations": "~1.0",
        "jms/serializer": "^3.2",
        "jms/metadata": "^2.0",
        "symfony/expression-language": "~3.0 || ~4.0 || ~5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7 | ^9",
        "doctrine/coding-standard": "^5.0 | ^8.0",
        "doctrine/persistence": "^1.3.4",
        "symfony/yaml": "~3.0 || ~4.0 || ~5.0",
        "symfony/routing": "~3.0 || ~4.0 || ~5.0",
        "pagerfanta/pagerfanta": "~1.0",
        "twig/twig": "^1.34 || ^2.0 || ^3.0",
        "phpspec/prophecy-phpunit": "^2.0"
    },
    "suggest": {
        "symfony/yaml": "To use yaml based configuration.",
        "symfony/routing": "To use the SymfonyRouteFactory.",
        "twig/twig": "To use the Twig extensions."
    },
    "autoload": {
        "psr-4": { "Hateoas\\": "src/" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    }
}
